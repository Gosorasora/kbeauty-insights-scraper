# K-Beauty 바이럴 감지 시스템 환경 설정
# ===========================================
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요.

# YouTube Data API v3 키 (필수)
# https://console.developers.google.com에서 발급
# 여러 키를 콤마로 구분하여 입력 (할당량 로테이션용)
YOUTUBE_API_KEYS=AIzaSyD2nksoiuYqqPA43D8wLE1Xd1HZhlbPg2k

# 모니터링 설정
MONITORING_INTERVAL=3600  # 모니터링 주기 (초, 기본: 1시간)
VIRAL_THRESHOLD=6.0       # 바이럴 임계값 (0-10, 기본: 6.0)
SURGE_THRESHOLD=7.0       # 급상승 임계값 (0-10, 기본: 7.0)

# 알림 설정
ENABLE_ALERTS=true        # 알림 활성화 (true/false)

# Slack 알림 (선택사항)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#viral-alerts

# 이메일 알림 (선택사항)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@yourcompany.com
SMTP_PASSWORD=your_app_password
EMAIL_RECIPIENTS=team@yourcompany.com,manager@yourcompany.com

# SMS 알림 (선택사항, Twilio 등)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+1234567890
SMS_TO_NUMBERS=+1234567890,+0987654321

# 데이터베이스 설정 (선택사항)
DATABASE_URL=postgresql://user:password@localhost:5432/viral_detection
REDIS_URL=redis://localhost:6379/0

# 프록시 설정 (선택사항, 웹 스크래핑용)
PROXY_LIST=proxy1.com:8080:user:pass,proxy2.com:8080:user:pass

# 로깅 설정
LOG_LEVEL=INFO            # DEBUG, INFO, WARNING, ERROR
LOG_FILE=viral_detection.log

# 결과 저장 설정
SAVE_RESULTS=true         # 결과 파일 저장 여부
RESULTS_DIRECTORY=viral_results

# Chrome 설정 (웹 스크래핑용)
CHROME_HEADLESS=true      # Headless 모드 사용 여부
CHROME_DEBUG_PORT=9222    # Chrome 디버그 포트

# API 제한 설정
MAX_CONCURRENT_TASKS=10   # 최대 동시 작업 수
BATCH_SIZE=100           # 배치 처리 크기
REQUEST_DELAY=1          # 요청 간 딜레이 (초)

# 개발/테스트 설정
DEBUG_MODE=false         # 디버그 모드
TEST_MODE=false          # 테스트 모드 (실제 API 호출 안함)
MOCK_DATA=false          # 목 데이터 사용 여부